{
  "printWidth": 80,
  "tabWidth": 2,
  "endOfLine": "lf",

  "useTabs": false,
  "semi": true,
  "singleQuote": false,
  "jsxSingleQuote": false,
  "bracketSpacing": true,
  "bracketSameLine": false,

  "quoteProps": "as-needed",
  "trailingComma": "es5",
  "arrowParens": "always",

  "requirePragma": false,
  "insertPragma": false,

  "proseWrap": "preserve",
  "htmlWhitespaceSensitivity": "css",
  "vueIndentScriptAndStyle": false,

  "plugins": ["prettier-plugin-tailwindcss"]
}
